{
	"manifest_version": 3,
	"name": "Canvas Discussion Assistant",
	"version": "1.0.0",
	"description": "Generate Canvas discussion posts and replies using Claude or Gemini AI. Copy to clipboard for manual editing and posting.",

	"permissions": ["storage", "activeTab", "clipboardWrite"],

	"host_permissions": [
		"https://*.instructure.com/*",
		"https://api.anthropic.com/*",
		"https://generativelanguage.googleapis.com/*"
	],

	"content_scripts": [
		{
			"matches": ["https://*.instructure.com/courses/*/discussion_topics/*"],
			"js": ["content/dom-parser.js", "content/canvas-injector.js"],
			"css": ["content/overlay.css"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"background": {
		"scripts": ["lib/gemini-api.js", "background/service-worker.js"]
	},

	"web_accessible_resources": [
		{
			"resources": ["content/overlay.html"],
			"matches": ["https://*.instructure.com/*"]
		}
	],
	"action": {
		"default_popup": "popup/popup.html"
	},
	"options_ui": {
		"page": "popup/popup.html",
		"open_in_tab": false
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "canvas-discussion-assistant@anthropic.com",
			"strict_min_version": "109.0"
		}
	}
}
